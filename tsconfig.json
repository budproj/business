{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "lib/*": ["../lib/*"]
    },
    "incremental": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "lib/**/*.ts"
  ]
}
