{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "lib/*": ["./lib/*"],
      "src/*": ["./src/*"],
      "@interface/*": ["src/interface/*"],
      "@config/*": ["./config/*"]
    },
    "incremental": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "config/**/*.ts", "lib/**/*.ts"],
  "preferences": {
    "importModuleSpecifierPreference": "non-relative"
  }
}
