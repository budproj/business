{
  "name": "business",
  "version": "1.0.0",
  "description": "Web interface for Bud's execution mode",
  "main": "src/main.js",
  "scripts": {
    "start": "node dist/src/main",
    "prebuild": "run-s clean",
    "build": "nest build",
    "format": "prettier --write 'src/**/*.ts'",
    "start:dev": "run-s db:local:up start:watch",
    "start:watch": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "compile": "tsc",
    "clean": "rimraf -rf dist",
    "lint": "eslint '{src,lib}/**/*.ts'",
    "lint:fix": "npm run lint -- --fix",
    "typeorm": "run-s clean compile && npm run typeorm:run --",
    "typeorm:run": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm --config src/config/database/config",
    "migration:generate": "npm run typeorm migration:generate -- -n",
    "migration:run": "npm run typeorm migration:run",
    "migration:format": "prettier --write 'src/migrations/*.ts'",
    "deploy": "npm run build && waypoint up",
    "db:local:up": "docker start business-postgres-database",
    "db:local:init": "run-s db:local:new migration:run db:local:load-data",
    "db:local:new": "docker run -d --name business-postgres-database -e POSTGRES_PASSWORD=Pass2020! -e POSTGRES_DB=business_local -v /var/lib/postgresql/data:/var/lib/postgresql/data -p 5432:5432 postgres",
    "db:local:load-data": "ts-node -r tsconfig-paths/register src/database/environments/local/load-dump",
    "db:develop:load-data": "ts-node -r tsconfig-paths/register src/database/environments/develop/load-dump",
    "db:production:load-sandbox-data": "ts-node -r tsconfig-paths/register src/database/environments/production/load-sandbox"
  },
  "author": "delucca <delucca@pm.me>",
  "license": "Apache-2.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/budproj/business.git"
  },
  "bugs": {
    "url": "https://github.com/budproj/business/issues"
  },
  "engines": {
    "npm": ">=7.0.8",
    "node": ">=15.2.1"
  },
  "dependencies": {
    "@nestjs/cli": "^7.5.3",
    "@nestjs/common": "^7.5.2",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.5.2",
    "@nestjs/graphql": "^7.8.2",
    "@nestjs/passport": "^7.1.3",
    "@nestjs/platform-fastify": "^7.5.2",
    "@nestjs/typeorm": "^7.1.5",
    "@types/lodash": "^4.14.165",
    "@types/passport-jwt": "^3.0.3",
    "apollo-server-fastify": "^3.0.0-alpha.3",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "date-fns": "^2.16.1",
    "fastify": "^3.8.0",
    "fastify-cors": "^5.1.0",
    "graphql": "^15.4.0",
    "graphql-tools": "^7.0.1",
    "jwks-rsa": "^1.11.0",
    "lodash": "^4.17.20",
    "logform": "^2.2.0",
    "nest-winston": "^1.4.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.3",
    "typeorm": "^0.2.29",
    "typeorm-naming-strategies": "^2.0.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@budproj/eslint-config-base-ts": "^0.0.12",
    "@budproj/eslint-config-prettier-ts": "^0.0.12",
    "@budproj/prettier-config": "^0.0.12",
    "@nestjs/schematics": "^7.2.1",
    "@types/eslint": "^7",
    "@types/eslint-config-prettier": "^6",
    "@types/eslint-plugin-prettier": "^3",
    "@types/passport": "^0",
    "@types/prettier": "^2",
    "@types/rimraf": "^3",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "eslint": "^7.13.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.2",
    "node-sql-reader": "^0.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "ts-loader": "^8.0.11",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
